<div class="flex flex-col gap-1 bg-white">
    <label class="font-semibold text-sm text-slate-700" for="{{ form.vars.id }}">
        {{ form.vars.label }}
    </label>
    <textarea id="{{ form.vars.id }}" rows="{{ rows }}" class="{{ input_width }} border border-gray-300 bg-gray-100/70 text-gray-900 text-sm  px-2 py-1 rounded focus:bg-white" placeholder="{{ placeholder }}" required="{{ required }}" name="{{ form.vars.name }}">{{ form.vars.value }}</textarea>
</div>