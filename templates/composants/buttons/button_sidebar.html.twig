<a
    id="{{ id }}"
    class="border border-slate-800 text-sm text-gray-700 rounded-full px-1.5 py-1.5 hover:bg-gray-500 hover:text-white"
    href="{{ href }}"
    data-array = "{{ array }}"
>
    <div class="flex flex-row items-center me-2">
        <div class="w-10 flex justify-center">
            {{ icon|raw }}
        </div>
        <div class="flex-1 text-start text-xs ms-2">
            {{ text }}
        </div>
    </div>

</a>